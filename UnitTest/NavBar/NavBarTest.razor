@namespace UnitTest
@inherits TestContext

@code {
    private void FourNavBarMenus(RenderTreeBuilder __builder) {
        <NavBarMenu />
        <NavBarMenu />
        <NavBarMenu />
        <NavBarMenu />
    }

    private (IRenderedFragment fragment, NavBar navBar, NavBarMenu navBarMenu, NavBarItem navBarItem) RenderNavBarTree() {
        NavBar? navBar = null;
        NavBarMenu? navBarMenu = null;
        NavBarItem? navBarItem = null;

        IRenderedFragment fragment = Render(
            @<NavBar @ref="navBar">
                <Items>
                    <NavBarMenu @ref="navBarMenu">
                        <Items>
                            <NavBarItem @ref="navBarItem" />
                        </Items>
                    </NavBarMenu>
                </Items>
            </NavBar>
            );

        return (fragment, navBar!, navBarMenu!, navBarItem!);
    }
}
