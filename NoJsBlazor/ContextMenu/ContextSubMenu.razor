@using Microsoft.AspNetCore.Components.Web

@namespace NoJsBlazor
@inherits ListableComponentBase<ContextSubMenu>

<li class="context-element @(Expanded ? "expanded" : string.Empty)">
    <div class="context-div" role="button" @onclick="DropRightClick">
        <CascadingValue Name="Head" Value="true" IsFixed="true">
            @Head
        </CascadingValue>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 10" class="context-arrow @(Expanded ? "expanded" : string.Empty)">
            <polygon fill="%23000B" points="0,0 5,10 10,0 5,3" />
        </svg>
    </div>
    <ul class="context-menu">
        @Items
    </ul>
</li>
